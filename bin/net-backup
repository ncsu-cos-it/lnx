#!/bin/sh

#=== Configuration ===
USER=${LOGNAME}
LOGFILE="bkup-log.txt"
ARCHIVE="/home"
SRVDIR="LINUX"
SERVER="geek.stat.ncsu.edu"

#=== Backin up The Files ===
echo "Backing up files....."
echo "===================================================================" > /tmp/${LOGFILE}
echo "." >> /tmp/${LOGFILE}
/bin/date +%D%t%T >> /tmp/${LOGFILE}
echo "." >> /tmp/${LOGFILE}
echo "Backing up $USER..." >> /tmp/${LOGFILE}
cd $ARCHIVE
/usr/bin/rsync -e ssh -rltvz --delete ${USER} ${USER}@${SERVER}:${SRVDIR} >> /tmp/${LOGFILE}
echo "." >> /tmp/${LOGFILE}
echo "===================================================================" >> /tmp/${LOGFILE}
cd /tmp
echo "Backing up $LOGFILE..." >> /tmp/${LOGFILE}
/usr/bin/rsync -e ssh -rltvz --delete $LOGFILE  ${USER}@${SERVER}:
