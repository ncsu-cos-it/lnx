#!/bin/bash
BINDIR="/opt/cos/bin"
CONFDIR="/opt/cos/etc"
if [ -f "$CONFDIR/Tag.txt" ] 
  then
	cat $CONFDIR/Tag.txt
  else
     if ! [ -d "$CONFDIR" ] 
     then
	     mkdir -p $CONFDIR
     fi
     if [ -e "/opt/cos/sbin/show-sn" ] 
     then
             SN=`/opt/cos/sbin/show-sn`
     else
	     echo "Missing: /opt/cos/sbin/show-sn"
	     exit 0
     fi
     if [ -e "$BINDIR/sn-query" ] 
     then
             $BINDIR/sn-query $SN > /tmp/$SN.txt
     else
	     echo "Missing: $BINDIR/sn-query"
	     exit 0
     fi
     if [ -s "/tmp/$SN.txt" ]
     then
         IN=`cat /tmp/$SN.txt`
         arrIN=(${IN//,/ })
         Rows=`echo ${arrIN[0]} | cut -f2 -d: | sed -e 's/"//g'`
     else
	 echo "Missing VPN connection"
	 exit 0
     fi
     if [ "$Rows" == "0" ] 
     then
	echo "COS999999"
     else
        Tag=`echo ${arrIN[3]} | cut -f2 -d: | sed -e 's/"//g'` 
        echo $Tag > $CONFDIR/Tag.txt
        echo $Tag
     fi
     /bin/rm /tmp/$SN.txt
fi
